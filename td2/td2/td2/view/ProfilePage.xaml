<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="td2.view.ProfilePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Modifier">

        </ToolbarItem>
    </ContentPage.ToolbarItems><!--Clicked="Modifier"-->
  <ContentPage.Content >
    <StackLayout>
      <Label Text="Prénom" />
      <Entry Text="{Binding User.FirstName }" IsReadOnly="True" />
      <Label Text="Nom" />
      <Entry Text="{Binding User.LastName}" IsReadOnly="True" />

      <Label Text="Email" />
      <Entry Text="{Binding User.Email}" IsReadOnly="True" />

      <!--<Image Source="{Binding User.ImageUrl}" />-->
    </StackLayout>
  </ContentPage.Content>
</ContentPage>